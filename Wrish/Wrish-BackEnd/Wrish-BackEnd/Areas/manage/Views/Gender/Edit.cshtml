@model Gender
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1>Gender Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Image</label>
                    <input class="form-control img-upload-input" asp-for="ImageFile">
                    <span class="text-danger d-block" asp-validation-for="ImageFile"></span>

                    <div class="img-box" style=" margin: 10px; display: flex; justify-content: center; align-items: center;">
                        <img src="~/uploads/genders/@Model.Image" style="width:130px;height:130px;object-fit:cover;" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



