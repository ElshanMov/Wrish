@model ProductComment
@{
    ViewData["Title"] = "InfoComment";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="mb-4">Comment Information</h1>
        </div>
        <div class="col-lg-8 mx-auto d-flex justify-content-center">
            <div class="card" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">FullName: @Model.FullName</h5>
                    <h5 class="card-title">Email: @Model.Email</h5>
                    <h5 class="card-title">Product Name: @Model.Product.Name</h5>
                    <h5 class="card-title">Rate: @Model.Rate</h5>
                    <h5 class="card-title">Text: @Model.Text</h5>
                    <h5 class="card-title">Status: <span class="badge badge-@(Model.Status?"success":"info")">@(Model.Status?"Accept":"Pending")</span></h5>


                    @if (!Model.Status)
                    {
                        <form method="post" asp-action="AcceptComment" class="d-inline-block">
                            <input name="Id" value="@Model.Id" type="hidden" />
                            <button type="submit" class="btn btn-primary">Accept</button>
                        </form>
                    }

                    <a asp-action="infocomment" class="btn btn-info">Go to back</a>
                </div>
            </div>
        </div>
    </div>
</div>

