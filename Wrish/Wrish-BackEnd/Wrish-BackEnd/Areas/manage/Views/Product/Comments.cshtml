
@{
    ViewData["Title"] = "Comments";
}

@model PagenatedList<ProductComment>
@{
    int count = (ViewBag.SelectedPage - 1) * 8;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12"><h1 class="mb-3">Comments</h1></div>
        <div class="col-lg-12">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Text</th>
                        <th scope="col">Rate</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Product.Name</td>
                        <td>@(item.Text==null ||item.Text.Length<=250?item.Text:item.Text.Substring(0,250)+"...")</td>
                        <td>@item.Rate</td>
                        <td><span class="badge badge-@(item.Status?"success":"info")">@(item.Status?"Accept":"Pending")</span></td>                        
                        <td>
                            <a class="btn btn-info mb-2" asp-action="infocomment" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="left" title="Info"><i class="fa-solid fa-pen"></i></a>
                            <a class="btn btn-danger btn-delete" asp-action="deletecomment" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="left" title="Delete"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                <ul class="pagination">
                    @if (Model.HasPrev)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="index" asp-route-page="@(Model.PageIndex-1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        @if (Model.PageIndex - 1 == i)
                        {
                            <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                        }
                        @if (Model.PageIndex == i)
                        {
                            <li class="page-item active"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                        }
                        @if (Model.PageIndex + 1 == i)
                        {
                            <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                        }

                    }
                    @if (Model.HasNext)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="index" asp-route-page="@(Model.PageIndex+1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }

                </ul>
            </nav>
        </div>
    </div>
</div>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}



