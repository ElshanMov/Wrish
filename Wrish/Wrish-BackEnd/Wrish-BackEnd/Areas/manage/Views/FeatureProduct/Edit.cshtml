@model FeatureProduct
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <h1>Feature Product Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <input type="hidden" class="form-control" asp-for="Key">

                    <h1 class="text-center">@Model.Key</h1>
                </div>

                @if (Model.Value.Contains(".png") || Model.Value.Contains(".jpeg") || Model.Value.Contains(".svg"))
                {
                    <div class="mb-3">
                        <input type="hidden" class="form-control" asp-for="Value">
                        <label asp-for="ImageFile" class="form-label">Image</label>
                        <input type="file" class="form-control img-upload-input" asp-for="ImageFile">
                        <span class="text-danger d-block" asp-validation-for="ImageFile"></span>

                        <div class="img-box mx-auto mt-5" style="width:100%;height:100%">
                            <img class="img-fluid" style="object-fit:cover" src="~/uploads/featureproducts/@Model.Value" />
                        </div>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <label asp-for="Value" class="form-label">Value</label>
                        <input asp-for="Value" class="form-control">
                        <span class="text-danger" asp-validation-for="Value"></span>
                    </div>
                }

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

