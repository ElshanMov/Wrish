@model Faq
@{
    ViewData["Title"] = "Faq";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1>FAQs Create</h1>
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="QuestionsTitle" class="form-label">Qusetion Title</label>
                    <input asp-for="QuestionsTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="QuestionsTitle"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Content">Answer</label>
                    <textarea class="form-control" asp-for="Content" id="editor"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>

                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://cdn.ckeditor.com/ckeditor5/31.1.0/classic/ckeditor.js"></script>
    <script src="~/manage/js/editor.js"></script>
}

