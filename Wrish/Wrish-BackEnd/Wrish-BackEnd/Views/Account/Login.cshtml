@{
    ViewData["Title"] = "Login";
}

@model LoginViewModel
<main>
    <section id="login">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login-box">
                        <div class="login-title">
                            <h2><i class="fa-solid fa-user"></i>Login</h2>
                            <div class="title-line"></div>
                        </div>
                        <div class="login-content">
                            <form method="post">
                                <div class="form-group">
                                    <label asp-for="Email">Email address</label>
                                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="example@example.com">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                <div class="forgot-password">
                                    <a asp-action="ForgotPassword" asp-controller="account">Forgot Password?</a>
                                </div>

                                <div class="login-button">
                                    <button type="submit">LOGIN</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts{ 
 @await Html.PartialAsync("_ValidationScriptsPartial")
}
