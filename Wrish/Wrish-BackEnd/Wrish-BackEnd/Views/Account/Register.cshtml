
@{
    ViewData["Title"] = "Register";
}
@model RegisterViewModel
    <main>
        <section id="register">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="register-box">
                            <div class="register-title">
                                <h2><i class="fa-solid fa-door-open"></i>Register</h2>
                                <div class="title-line"></div>
                            </div>
                            <div class="register-content">
                                <form method="post">
                                    <div class="form-group">
                                        <label asp-for="FullName">Full Name</label>
                                        <input type="text" asp-for="FullName" class="form-control" id="fullname" placeholder="Elshan Mammadov">
                                        <span class="text-danger" asp-validation-for="FullName"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="UserName">User Name</label>
                                        <input type="text" asp-for="UserName" class="form-control" id="username" placeholder="ElshanMov">
                                        <span class="text-danger" asp-validation-for="UserName"></span>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="example@example.com">
                                        <span class="text-danger" asp-validation-for="Email"></span>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password">Password</label>
                                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="password">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-1"></div>
                                    <div class="register-button">
                                        <button type="submit">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

@section Scripts{ 
 @await Html.PartialAsync("_ValidationScriptsPartial");
}
  